function stl {
	if [ -h $@ ]; then
		st "$(cygpath -w $(readlink $@))"
	else
		st $@
	fi
}

YELLOW='\e[33m\]'
RESET='\e[0m\]'   

export PS1="\[$YELLOW\][\h:\w]\[$RESET\] "

alias cdc='cd /cygdrive/c'
alias stextra="stl ~/.bash_extra"
alias cygwin-update="setup-x86_64.exe --no-desktop --no-shortcuts --no-startmenu --quiet-mode --packages git,subversion,vim,curl,wget,openssh"