function stl {
	if [ -h $@ ]; then
		stl "$(readlink $@)"
	else
		st "$(cygpath -w $@)"
	fi
}

YELLOW='\e[33m\]'
RESET='\e[0m\]'   

export PS1="\[$YELLOW\][\h:\w]\[$RESET\] "

alias cdc='cd /cygdrive/c'
alias stextra="stl ~/.bash_extra"
alias runx="run xwin -multiwindow -noclipboard" # Alternative: startxwin
alias cygwin-update="cygwinsetup.exe --no-desktop --no-shortcuts --no-startmenu --quiet-mode --packages bash,coreutils,cygutils,cygwin,dos2unix,grep,gzip,git,subversion,vim,curl,wget,openssh,xinit,less,mercurial,python,tar,which"